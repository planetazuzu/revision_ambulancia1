# Configuración de entorno para desarrollo local

# Modo Mock (true para usar datos mock, false para usar backend real)
NEXT_PUBLIC_MOCK_MODE=true

# URL del backend (solo se usa si MOCK_MODE=false)
NEXT_PUBLIC_API_URL=http://localhost:3001
BACKEND_URL=http://localhost:3001

# Configuración de base de datos (para el backend)
DATABASE_URL="postgresql://app:app@localhost:5432/appdb?schema=public"
REDIS_URL="redis://localhost:6379"

# JWT Secret (para el backend)
JWT_SECRET="supersecretjwtkey"
JWT_EXPIRATION_TIME="1h"

# Configuración de email (para el backend)
EMAIL_HOST="localhost"
EMAIL_PORT=1025
EMAIL_USER="testuser"
EMAIL_PASSWORD="testpassword"

# Web Push (opcional)
WEB_PUSH_VAPID_PUBLIC_KEY="YOUR_VAPID_PUBLIC_KEY"
WEB_PUSH_VAPID_PRIVATE_KEY="YOUR_VAPID_PRIVATE_KEY"
WEB_PUSH_VAPID_SUBJECT="mailto:your-email@example.com"
