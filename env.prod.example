# ===========================================
# AmbuReview - Variables de Entorno Producci贸n
# ===========================================

# Base de Datos
POSTGRES_DB=ambureview_prod
POSTGRES_USER=ambureview_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_PORT=5432

# JWT
JWT_SECRET=your_super_secure_jwt_secret_key_here_change_this
JWT_EXPIRES_IN=7d

# Redis
REDIS_URL=redis://redis:6379
REDIS_PORT=6379

# Email (Configuraci贸n SMTP real)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@ambureview.com

# Web Push (VAPID keys para notificaciones)
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
VAPID_EMAIL=noreply@ambureview.com

# Configuraci贸n de la Aplicaci贸n
NODE_ENV=production
BACKEND_PORT=3001
FRONTEND_PORT=3000
FRONTEND_URL=https://your-domain.com
NEXT_PUBLIC_API_URL=https://your-domain.com/api

# CORS
CORS_ORIGIN=https://your-domain.com

# Upload de Archivos
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Backup
BACKUP_SCHEDULE=0 3 * * *
BACKUP_KEEP_DAYS=30
BACKUP_KEEP_WEEKS=4
BACKUP_KEEP_MONTHS=6

# Nginx
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# MailHog (Solo para desarrollo)
MAILHOG_WEB_PORT=8025
MAILHOG_SMTP_PORT=1025

# SSL (Para HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoreo (Opcional)
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=info

# Base de datos URL completa (para Prisma)
DATABASE_URL=postgresql://ambureview_user:your_secure_password_here@db:5432/ambureview_prod?schema=public
